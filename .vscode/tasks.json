{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "make",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"--directory=${workspaceFolder};",
			],
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
                "reveal":"always",
				"panel": "new"
			},
			//"detail": "compiler: /usr/bin/clang"
		}
	]
}